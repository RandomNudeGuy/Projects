def main_menu():
    while True:
        print("Choose a category:")
        for idx, category in enumerate(evidence_data.keys(), 1):
            print(f"{idx}. {category}")
        print(f"{len(evidence_data) + 1}. Exit")
        choice = int(input("Enter the number of your choice: "))
        if choice == len(evidence_data) + 1:
            break
        category = list(evidence_data.keys())[choice - 1]
        subcategory_menu(category)

def subcategory_menu(category):
    while True:
        print(f"Choose an area in {category}:")
        for idx, subcategory in enumerate(evidence_data[category].keys(), 1):
            print(f"{idx}. {subcategory}")
        print(f"{len(evidence_data[category]) + 1}. Back to main menu")
        choice = int(input("Enter the number of your choice: "))
        if choice == len(evidence_data[category]) + 1:
            break
        subcategory = list(evidence_data[category].keys())[choice - 1]
        show_evidence(category, subcategory)

def show_evidence(category, subcategory):
    evidence = evidence_data[category][subcategory]
    print(f"Evidence in {subcategory}:")
    print(f"Summary: {evidence['summary']}")
    while True:
        print("Options:")
        print("1. Expand for more details")
        print("2. View sources and articles")
        print("3. Back to previous menu")
        choice = int(input("Enter the number of your choice: "))
        if choice == 1:
            print(f"Details: {evidence['details']}")
        elif choice == 2:
            print("Sources and articles:")
            for source in evidence['sources']:
                print(source)
        elif choice == 3:
            break

if __name__ == "__main__":
    main_menu()
